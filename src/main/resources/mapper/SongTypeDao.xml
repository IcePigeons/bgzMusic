<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxb.bgz.dao.SongTypeDao">

    <resultMap id="BaseResultMap" type="com.cxb.bgz.entity.SongType">
        <!--@Table song_type-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="typeName" column="type_name" jdbcType="VARCHAR"/>
        <result property="des" column="des" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, type_name, des
        from bgzMusic.bgz_song_type
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, type_name, des
        from bgzMusic.bgz_song_type
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, type_name, des
        from bgzMusic.bgz_song_type
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="typeName != null and typeName != ''">
                and type_name = #{typeName}
            </if>
            <if test="des != null and des != ''">
                and des = #{des}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bgzMusic.bgz_song_type(des)
        values (#{des})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bgzMusic.bgz_song_type
        <set>
            <if test="des != null and des != ''">
                des = #{des},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bgzMusic.bgz_song_type where id = #{id}
    </delete>

</mapper>
