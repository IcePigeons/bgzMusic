<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxb.bgz.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.cxb.bgz.entity.User">
        <!--@Table bgz_user-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="isAdmin" column="is_admin" jdbcType="INTEGER"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="sign" column="sign" jdbcType="VARCHAR"/>
        <result property="headPic" column="head_pic" jdbcType="VARCHAR"/>
        <result property="regTime" column="reg_time" jdbcType="TIMESTAMP"/>
        <result property="userState" column="user_state" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, user_name, password, is_admin, email, sign, head_pic, reg_time, user_state
        from bgzMusic.bgz_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, user_name, password, is_admin, email, sign, head_pic, reg_time, user_state
        from bgzMusic.bgz_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_name, password, is_admin, email, sign, head_pic, reg_time, user_state
        from bgzMusic.bgz_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="isAdmin != null">
                and is_admin = #{isAdmin}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="sign != null and sign != ''">
                and sign = #{sign}
            </if>
            <if test="headPic != null and headPic != ''">
                and head_pic = #{headPic}
            </if>
            <if test="regTime != null">
                and reg_time = #{regTime}
            </if>
            <if test="userState != null">
                and user_state = #{userState}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bgzMusic.bgz_user(user_name,password, email, sign)
        values (#{userName},#{password}, #{email}, #{sign})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bgzMusic.bgz_user
        <set>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="isAdmin != null">
                and is_admin = #{isAdmin}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="sign != null and sign != ''">
                and sign = #{sign}
            </if>
            <if test="headPic != null and headPic != ''">
                and head_pic = #{headPic}
            </if>
            <if test="userState != null">
                and user_state = #{userState}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bgzMusic.bgz_user where id = #{id}
    </delete>

</mapper>
